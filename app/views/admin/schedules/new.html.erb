<main class="mx-auto text-center">
    <h1 class="my-8 text-4xl font-bold"><%= @movie.name %>の上映スケジュールを追加</h1>

    <%= form_with model: @schedule, url: admin_movie_schedules_path(@movie), method: :post, class: "flex flex-col items-center gap-4 w-1/2 mx-auto" do |form| %>
    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= form.label :start_time, "開始時間", class: "col-span-1" %>
        <%= form.time_field :start_time, class: "border-2 border-gray-300 rounded-md p-2 col-span-4" %>
        <% @movie.errors.full_messages_for(:start_time).each do |msg| %>
        <div class="error-text"><%= msg %></div>
        <% end %>
    </div>
    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= form.label :end_time, "終了時間", class: "col-span-1" %>
        <%= form.time_field :end_time, class: "border-2 border-gray-300 rounded-md p-2 col-span-4" %>
        <% @movie.errors.full_messages_for(:end_time).each do |msg| %>
        <div class="error-text"><%= msg %></div>
        <% end %>
    </div>

    <%= form.submit "作成", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    <% end %>
</main>