<main class="mx-auto text-center flex flex-col items-center gap-4">
    <h1 class="my-8 text-4xl font-bold">映画一覧</h1>

    <%= link_to "映画追加", new_admin_movie_path, class: "bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600" %>

    <% if @movies.empty? %>
    <p>映画がありません</p>
    <% else %>
    <table class="mx-auto border-collapse border border-gray-300 table-auto">
        <thead>
            <tr>
                <th class="border border-gray-300">ID</th>
                <th class="border border-gray-300">タイトル</th>
                <th class="border border-gray-300">公開年</th>
                <th class="border border-gray-300">概要</th>
                <th class="border border-gray-300">画像URL</th>
                <th class="border border-gray-300">上映中</th>
                <th class="border border-gray-300">登録日時</th>
                <th class="border border-gray-300">更新日時</th>
                <th class="border border-gray-300">操作</th>
            </tr>
        </thead>
        <tbody>
            <% @movies.each do |movie| %>
            <tr>
                <td class="border border-gray-300 p-2"><%= movie.id %></td>
                <td class="border border-gray-300 p-2"><%= movie.name %></td>
                <td class="border border-gray-300 p-2"><%= movie.year %></td>
                <td class="border border-gray-300 p-2"><%= movie.description %></td>
                <td class="border border-gray-300 p-2"><img src="<%= movie.image_url %>" alt="<%= movie.name %>" class="w-auto max-h-20"></td>
                <td class="border border-gray-300 p-2"><%= movie.is_showing ? "上映中" : "上映予定" %></td>
                <td class="border border-gray-300 p-2"><%= movie.created_at %></td>
                <td class="border border-gray-300 p-2"><%= movie.updated_at %></td>
                <td class="border border-gray-300 p-2">
                    <%= link_to "詳細", admin_movie_path(movie), class: "bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600" %>
                    <%= link_to "編集", edit_admin_movie_path(movie), class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
                    <%= link_to "削除", admin_movie_path(movie), method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <% end %>
</main>