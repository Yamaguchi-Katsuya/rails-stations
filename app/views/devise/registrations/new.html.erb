<main class="mx-auto px-4 py-8 flex flex-col items-center gap-4">
    <h2 class="text-2xl font-bold">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col items-center gap-4 w-1/2 mx-auto" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= f.label :name, "ユーザー名", class: "col-span-1" %>
        <%= f.text_field :name, class: "col-span-4 border-2 border-gray-300 rounded-md p-2" %>
    </div>

    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= f.label :email, "メールアドレス", class: "col-span-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-span-4 border-2 border-gray-300 rounded-md p-2" %>
    </div>

    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= f.label :password, "パスワード #{@minimum_password_length ? "(#{@minimum_password_length}文字以上)" : ""}", class: "col-span-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-span-4 border-2 border-gray-300 rounded-md p-2" %>
    </div>

    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= f.label :password_confirmation, "パスワード確認", class: "col-span-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-span-4 border-2 border-gray-300 rounded-md p-2" %>
    </div>

    <div class="w-full flex justify-center">
        <%= f.submit "新規登録", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
