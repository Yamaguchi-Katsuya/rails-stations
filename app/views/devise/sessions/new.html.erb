<main class="mx-auto px-4 py-8 flex flex-col items-center gap-4">
    <h2 class="text-2xl font-bold">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex flex-col items-center gap-4 w-1/2 mx-auto" }) do |f| %>
    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= f.label :email, "メールアドレス", class: "col-span-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-span-4 border-2 border-gray-300 rounded-md p-2" %>
    </div>

    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= f.label :password, "パスワード", class: "col-span-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-span-4 border-2 border-gray-300 rounded-md p-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="grid grid-cols-5 items-center gap-2 w-full">
        <%= f.label :remember_me, "ログイン状態を保存する", class: "col-span-1" %>
        <%= f.check_box :remember_me, class: "col-span-4" %>
    </div>
    <% end %>

    <div class="w-full flex justify-center">
        <%= f.submit "ログイン", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
